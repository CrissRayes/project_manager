<h2 class="mt-3">Listado de Proyectos</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nombre</th>
      <th scope="col">Descripción</th>
      <th scope="col">Inicio</th>
      <th scope="col">Término</th>
      <th scope="col">Estado</th>
      <th scope="col">Detalle</th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |prj| %>
        <tr>    
          <th scope="row"><%= prj.id %></th>
          <td><%= prj.name %></td>
          <td><%= prj.description %></td>
          <td><%= prj.start %></td>
          <td><%= prj.end %></td>
          <td><%= prj.state %></td>
          <td>
          <% if prj.state == 1 %> 
                  Propuesta
              <% elsif prj.state == 2 %>
                  En Progreso
              <% else %>
                  Terminado
              <% end %>
          </td>
        </tr>
    <% end %>
  </tbody>
</table>